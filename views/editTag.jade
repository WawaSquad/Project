extends layout2

block content
  
  .container
    .row.clearfix
        .col-md-12.column
          h3
            | Your Tags
          if (fail == true)
             .alert.alert-warning Sorry, That tag already exists
          table
            - for (var inx = 0; inx < results.length; inx++)
              tr
                td=results[inx].TAG+" "
          -var boardName= currentboardName
          -var objID= objectID
          -var srcID= sourceID
          form.form-horizontal(role='form' ,action="/editTag", method ='get')
            .form-group
              label.col-sm-2.control-label(for='tag') Add New Tag for #{objectID} from #{sourceID} in Board #{currentboardName}
              .col-sm-10             
                input#interest.form-control(type='text',name='tag') 
               
            .form-group
              .col-sm-offset-2.col-sm-10
                input#interest.form-control(type='hidden',name='objID',value=objID)
            .form-group
              .col-sm-offset-2.col-sm-10
                input#interest.form-control(type='hidden',name='srcID',value=srcID)
            .form-group
              .col-sm-offset-2.col-sm-10
                input#interest.form-control(type='hidden',name='boardName',value=boardName)
            .form-group
              .col-sm-offset-2.col-sm-10
                input#interest.form-control(type='hidden',name='nextPage',value=1)
            
            .form-group
              .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type='submit') Add Tag
          
            .form-group
              .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type='button', onclick="JavaScript:this.form.action='/photos';this.form.submit()") Go back to Board